# ByteRoute (Docker Compose)
# Copy this file to `.env` in the repo root.

# Required: used by the backend container entrypoint to download GeoLite2 databases.
MAXMIND_USER_ID=
MAXMIND_API_KEY=

# Optional: change the exposed port (defaults to 8080).
TRAEFIK_PORT=8080

# Optional: demo mode (generates mock traffic events).
DEMO_MODE=false

# Required: JWT secret used by backend signin/signup and bearer token validation.
JWT_SECRET=

# Optional: JWT expiration (jsonwebtoken format, e.g. 12h, 7d). Defaults to 1d.
AUTH_TOKEN_TTL=1d

# Optional: client-go token expiration (used by /auth/client-token). Defaults to 12h.
AUTH_CLIENT_TOKEN_TTL=12h

# Optional: auth cookie name used by backend/session middleware.
AUTH_COOKIE_NAME=byteroute_auth

# Optional: override Secure cookie attribute (set false for local HTTP with production NODE_ENV).
AUTH_COOKIE_SECURE=false

# Optional: CSRF cookie name used by double-submit CSRF protection.
CSRF_COOKIE_NAME=byteroute_csrf
