{
  "name": "@byteroute/backend",
  "private": true,
  "version": "4.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "pnpm typecheck && tsc -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.json",
    "lint": "eslint --fix --config eslint.config.ts",
    "test": "pnpm test:unit && pnpm test:e2e",
    "test:unit": "vitest run",
    "update:maxmind": "node scripts/download-maxmind.mjs",
    "test:watch": "vitest --watch",
    "coverage:unit": "vitest run --coverage",
    "coverage:e2e": "NODE_OPTIONS='--import tsx' c8 cucumber-js 'test/features/**/*.feature' --import 'test/features/support/**/*.ts' --import 'test/features/step_definitions/**/*.ts'",
    "coverage:merge": "node scripts/merge-coverage.mjs",
    "coverage": "pnpm coverage:unit && pnpm coverage:e2e && pnpm coverage:merge",
    "migrate:indexes": "node scripts/ensure-connection-indexes.mjs",
    "test:e2e": "NODE_OPTIONS='--import tsx' cucumber-js 'test/features/**/*.feature' --import 'test/features/support/**/*.ts' --import 'test/features/step_definitions/**/*.ts'"
  },
  "devDependencies": {
    "@byteroute/typescript": "workspace:*",
    "@cucumber/cucumber": "^12.6.0",
    "@eslint/js": "^9.39.2",
    "@types/express": "^5.0.6",
    "@types/ip": "^1.1.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.13",
    "@types/passport": "^1.0.17",
    "@types/passport-http-bearer": "^1.0.42",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.18",
    "c8": "^10.1.3",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-report": "^3.0.1",
    "istanbul-reports": "^3.2.0",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@byteroute/shared": "workspace:*",
    "@maxmind/geoip2-node": "^6.3.4",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "ip": "^2.0.1",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.2.1",
    "passport": "^0.7.0",
    "passport-http-bearer": "^1.0.1",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.8.3",
    "zod": "^4.3.6"
  }
}
